<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.topawar.manage.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.topawar.manage.domain.User">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="INTEGER"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="effectiveTag" column="effectiveTag" jdbcType="INTEGER"/>
        <result property="imageurl" column="imageurl" jdbcType="VARCHAR"/>
        <result property="role" column="imageurl" jdbcType="INTEGER"/>
        <result property="create_time" column="create_time" jdbcType="DATE"/>
        <result property="update_time" column="update_time" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,uid,`name`,
        `password`,gender,age,
        effectiveTag,imageurl,`role`,create_time,
        update_time
    </sql>

    <select id="selectListPage" resultType="com.topawar.manage.domain.User">
        select id,
               uid,
               `name`,
               `password`,
               gender,
               age,
               effectiveTag,
               imageurl,
               `role`,
               create_time,
               update_time
        from user
    </select>
</mapper>
